[folders]
{% for key, value in pillar['debenstack']['folders'].items() %}
{{key}}={{value}}
{% endfor %}

[configs]
names={{ pillar['debenstack']['mainconfig']['names'] | join(',') }}
maintenance={{ pillar['debenstack']['mainconfig']['maintenance'] }}

{% for config, attributes in pillar['debenstack']['subconfig'].items() %}
[{{config}}]
{% for key, value in attributes.items() %}
{{key}}={{value}}
{% endfor %}
{% endfor %}

[aws]
    AWS_ACCESS_KEY_ID={{ grains['awsaccesskeyid'] }}
    AWS_SECRET_ACCESS_KEY={{ grains['awssecretaccesskey'] }}
